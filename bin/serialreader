require 'serialport'

tty_port = '/dev/ttyACM0' #for example
baud_rate = 9600
data_bits = 8
stop_bits = 1
parity = SerialPort::NONE
sp = SerialPort.new( tty_port, baud_rate, data_bits, stop_bits, parity)
sp.read_timeout = 0

open("/dev/tty", "w") { |tty|
  tty.sync = true
